<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        android:gravity="center"
        android:padding="10dp"
        android:text="Escolha o seu produto: "
        android:textColor="@color/white"
        android:textSize="25dp" />

    <CheckBox
        android:id="@+id/arroz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:text="Arroz (R$ 2,69)"
        android:textSize="15dp"
        />

    <CheckBox
        android:id="@+id/leite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/arroz"
        android:text="Leite (R$ 5,00)"
        android:textSize="15dp" />
    <CheckBox
        android:id="@+id/carne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leite"
        android:text="Carne (R$ 9,70)"
        android:textSize="15dp"
        />
    <CheckBox
        android:id="@+id/feijão"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/carne"
        android:text="Feijão (R$ 2,70)"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/btnTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/feijão"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:backgroundTint="@color/grey"
        android:text="Verificar total das compras" />
</RelativeLayout>